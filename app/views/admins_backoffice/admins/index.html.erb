
<p><h1>ADMIN</h1></p>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>
       <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
        <i class="fa fa-plus"></i>
        <% end %>
      
      </th>
    </tr>
  </thead>
  <% @admins.each do |admin| %>
  <tbody>
    <tr>
      <td><%= admin.id %></td>
      <td><%= admin.email %></td>
      <td style="width: 100px">
      
        <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
        <i class="fa fa-edit"></i>
        <% end %>

        <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle",data:{
          confirm:" Certeza ao excluir Admin?"
        } do %>
        <i class="fa fa-minus"></i>
        <% end %>

      </td>
    </tr>
  </tbody>
    
  <% end %>
  
</table>